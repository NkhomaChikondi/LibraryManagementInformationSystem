@model LMIS.Web.DTOs.Role.RoleDTO
<!-- Modal -->

<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Create Role Form</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <hr />
        <div class="modal-body">
            <div class="card p-4">
                
                <form asp-action="Create" method="Post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="RoleName"></label>
                        <input asp-for="RoleName" placeholder="RoleName" class="form-control" />
                        <span asp-validation-for="RoleName" class="text-danger"></span>
                    </div>
                    
                    
                    <div class="form-control d-flex justify-content-end">
                        <button type="submit" class="btn btn-primary" id="create_role_btn" name="create_role_btn">Create Role</button>
                    </div>
                </form>
            </div>

        </div>
       
    </div>
</div>